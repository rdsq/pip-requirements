{
  "name": "pip-requirements",
  "displayName": "Pip Requirements",
  "description": "Some useless tools for requirements.txt",
  "author": {
    "name": "rdsq"
  },
  "publisher": "rdsq",
  "version": "1.7.4",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "browser": "./out/web.js",
  "contributes": {
    "commands": [
      {
        "command": "pip-requirements.install",
        "title": "Install Pip Packages",
        "icon": "$(cloud-download)"
      },
      {
        "command": "pip-requirements.freeze",
        "title": "Freeze Pip Packages",
        "icon": "$(export)"
      },
      {
        "command": "pip-requirements.install-manual",
        "title": "Install Pip Packages manually",
        "icon": "$(cloud-download)"
      },
      {
        "command": "pip-requirements.freeze-manual",
        "title": "Freeze Pip Packages manually",
        "icon": "$(export)"
      },
      {
        "command": "pip-requirements.install-row",
        "title": "Install Pip Package"
      },
      {
        "command": "pip-requirements.browse-row",
        "title": "View Pip Package In Browser"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "pip-requirements.install",
          "group": "navigation",
          "when": "editorLangId == 'pip-requirements' && !isWeb"
        },
        {
          "command": "pip-requirements.freeze",
          "group": "navigation",
          "when": "editorLangId == 'pip-requirements' && !isWeb"
        }
      ],
      "editor/context": [
        {
          "command": "pip-requirements.install-row",
          "when": "resourceLangId == 'pip-requirements' && !isWeb",
          "group": "Package"
        },
        {
          "command": "pip-requirements.browse-row",
          "when": "resourceLangId == 'pip-requirements'",
          "group": "Package"
        }
      ],
      "explorer/context": [
        {
          "command": "pip-requirements.install",
          "when": "resourceLangId == 'pip-requirements' && !isWeb",
          "group": "Pip"
        },
        {
          "command": "pip-requirements.freeze",
          "when": "resourceLangId == 'pip-requirements' && !isWeb",
          "group": "Pip"
        }
      ]
    },
    "configuration": {
      "title": "Pip Requirements",
      "properties": {
        "pip-requirements.ignoreFocusOut": {
          "type": "boolean",
          "default": false,
          "description": "Ignore focus out of extension's input fields"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "extensionDependencies": [
    "ms-python.python"
  ]
}
